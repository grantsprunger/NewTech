#thing-to-follow.shadowed
  %p

- if current_user
  #follow.shadowed
    %p follow
- else
  .sigin-follow.shadowed
    = link_to user_session_path do
      %p Signin to follow

#all-stats-window
  %h2 YOUR STARTUP COMMUNITIES
  %br
  %h3 CURRENTLY FOLLOWING
  - if current_user && current_user.interest_feeds.size > 0
    - s = current_user.interest_feeds.map{|i|  i.followable.try(:name) if i.followable_type != 'Zipcode'}
    - s << current_user.interest_feeds.map{|i|  i.followable.try(:code) if i.followable_type == 'Zipcode'}
    %p
      = s.flatten.reject{|s| s.nil?}.join(', ')
  - else 
    Sign In to follow different Locations
  %br
  %br
  %h3 TOTALS
  %p= "- Jobs = #{@job_count || 0}"
  %p= "- Freelancers = #{@job_count || 0}"
  %p= "- People = #{@job_count || 0}"
  %p= "- Events = #{@job_count || 0}"
