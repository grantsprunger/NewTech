.pull-left.span4
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well form-horizontal login-box" }) do |f| 
    = f.text_field :email, :class => "text top", :placeholder => "Email"
    = f.password_field :password, :class => "text bottom", :placeholder => "Password"

    - if devise_mapping.rememberable?
      .clearfix.inputs-list
        %label.checkbox.remember_me{ for:"user_remember_me"}
          = f.check_box :remember_me
          %span
            Remember me
      %br
    = f.submit "Sign in", :class => "btn btn-primary"
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = link_to "Forgot your password?", new_password_path(resource_name), :class => "btn"
      %br

.offset4
  = simple_form_for(resource, :validate => true, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well form form-horizontal registration-box' }) do |f|
    .inputs
      #fields
        = f.input :username, :required => true, :placeholder => "Username", label: false, :input_html => { :required => true, :class => "text top"}
        = f.input :email, :required => true, :placeholder => "Email", label: false, :input_html => { :required => true, :class => "text top"}
        = f.input :password, :required => true, :placeholder => "Password", label: false, :input_html => { :required => true, :class => "text top"}
        = f.input :password_confirmation, :required => true, :placeholder => "Password Confirmation", label: false, :input_html => { :required => true, :class => "text top"}
      #is_freelancer
        = f.input :is_freelancer, label: "Is a freelancer?"
      %hr
      = f.submit "Sign up", :class => "btn btn-success signup"


