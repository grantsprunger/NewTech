= simple_form_for([:admin, @company], :validate => true, :html => {:class => 'form-horizontal company_form' }) do |f|
  .span12.new_company
    .span6
      .well
        .form-inputs.row
          = f.association :user
          = f.input :enabled, as: :radio_buttons, item_wrapper_class: 'inline'
          = f.input :presented, as: :radio_buttons, item_wrapper_class: 'inline'
          = f.input :presentation_date, as: :string, :input_html => { :class => 'datepicker' }
        .form-inputs.row
          = f.association :category, :label_method => :name, :collection => CategoryService::all
          = f.input :name, :label => "Company Name", :as => :string
          = f.input :address, :as => :string
          = f.association :city,  :collection => CityService::cities_as_option(@company.city.county.state_id)
          = f.association :zipcode, :collection => ZipcodeService::zipcodes_as_option(@company.city.county_id)
          = f.input :email_address, :as => :string
          = f.input :founded_year, :as => :string
          = f.input :tags_list, :as => :string, :hint => "E.g.,marketing-automation, lead-generation,analytics, email-marketing"
          = f.input :description
          = f.input :raising_money, as: :boolean
          = f.association :investments_type, as: :radio_buttons, item_wrapper_class: 'inline'
          = f.association :employees_type, as: :radio_buttons, item_wrapper_class: 'inline'
        .form-inputs.row
          = f.input :homepage_url, :as => :string
          = f.input :twitter, :as => :string
          = f.input :facebook, :as => :string
          = f.input :jobs_url, :as => :string
          = f.input :kickstarter_url, :as => :string
          = f.input :kickstarter_end_date, :as => :datetime
    %br
    .control-group
      .controls
        .actions
          = f.submit 'Save', class: "btn btn-success btn-save"


